<tool id='fasttext-trainer' version='1.0.0'>
  <description>A fasttext trainer for all three types of models.</description>
  <command>python3 $__tool_directory__/fasttext-trainer.py -i $input -l $labels --epoch $epoch --ngrams $ngrams --label $label</command>
  <inputs>
    <param name='input' type='data' format='fasttext'/>
    <param name='type' type='text'/>
  </inputs>
  <outputs>
    <data name='output' format='text' />
  </outputs>
</tool>